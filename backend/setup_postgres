// install POSTGRES
sudo apt install postgresql postgresql-contrib
sudo systemctl start postgresql.service

// setup db and user
sudo -u postgres psql
CREATE DATABASE backend_db;
CREATE USER backend WITH PASSWORD 'backend';
GRANT ALL PRIVILEGES ON DATABASE backend_db TO backend;
ALTER ROLE backend SET client_encoding TO 'utf-8';
ALTER ROLE backend SET default_transaction_isolation TO 'read committed';
ALTER ROLE backend SET timezone TO 'UTC';

\c backend_db
GRANT ALL ON SCHEMA public TO backend;
